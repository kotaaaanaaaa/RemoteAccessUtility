<UserControl x:Class="RemoteAccessUtility.AccountEditDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:material="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" >
    <StackPanel Margin="16"
                Width="240">
        <StackPanel Orientation="Horizontal">
            <ComboBox x:Name ="AccountsList"
                      SelectionChanged="AccountsList_SelectionChanged"
                      DisplayMemberPath="Name"
                      Margin="0 0 4 0"
                      Width="175">
            </ComboBox>
            <Button Style="{StaticResource MaterialDesignFloatingActionMiniButton}"
                    IsEnabled="{Binding CanSave}"
                    Click="AddAccount_Click"
                    Height="24"
                    Width="24"
                    Margin="4 10 4 10">
                <material:PackIcon Kind="PlusCircleOutline" />
            </Button>
            <Button Style="{StaticResource MaterialDesignFloatingActionMiniButton}"
                    Click="RemoveAccount_Click"
                    Height="24"
                    Width="24"
                    Margin="4 10 4 10">
                <material:PackIcon Kind="MinusCircleOutline" />
            </Button>
        </StackPanel>
        <TextBox material:HintAssist.Hint="Name"
                 Text="{Binding Name}"
                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                 Margin="0 8 0 8">
        </TextBox>
        <TextBox x:Name="Password"
                 material:HintAssist.Hint="Password"
                 TextChanged="Password_OnTextChanged"
                 Text="{Binding DisplayPassword}"
                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                 Margin="0 8 0 8">
        </TextBox>
        <TextBox x:Name="Confirm"
                 material:HintAssist.Hint="Confirm Password"
                 TextChanged="Confirm_OnTextChanged"
                 Text="{Binding DisplayConfirm}"
                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                 Margin="0 8 0 8">
        </TextBox>
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="Save"
                    Style="{DynamicResource MaterialDesignFlatButton}"
                    IsEnabled="{Binding CanSave}"
                    Click="Save_Click"/>
            <Button Content="Close"
                    IsDefault="True"
                    Style="{DynamicResource MaterialDesignFlatButton}"
                    Command="{x:Static material:DialogHost.CloseDialogCommand}"/>
        </StackPanel>
    </StackPanel>
</UserControl>
