<UserControl x:Class="RemoteAccessUtility.AccountEditDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RemoteAccessUtility"
             xmlns:rule="clr-namespace:RemoteAccessUtility.Validations"
             xmlns:material="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" >
    <StackPanel Margin="16"
                Width="240">
        <ComboBox x:Name ="AccountsList"
                  SelectionChanged="AccountsList_SelectionChanged"
                  DisplayMemberPath="Name"
                  Margin="0 8 0 0">
        </ComboBox>
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0 8 0 8">
            <Button x:Name="AddEnvironment"
                    Style="{StaticResource MaterialDesignFloatingActionMiniButton}"
                    Click="AddAccount_Click"
                    Height="24"
                    Width="24"
                    Margin="4 0 4 0">
                <material:PackIcon Kind="PlusCircleOutline" />
            </Button>
            <Button x:Name="RemoveEnvironment"
                    Style="{StaticResource MaterialDesignFloatingActionMiniButton}"
                    Click="RemoveAccount_Click"
                    Height="24"
                    Width="24"
                    Margin="4 0 4 0">
                <material:PackIcon Kind="MinusCircleOutline" />
            </Button>
        </StackPanel>
        <TextBox
            x:Name="AccountName"
            material:HintAssist.Hint="Name"
            Style="{StaticResource MaterialDesignFloatingHintTextBox}"
            Margin="0 8 0 8">
            <TextBox.Text>
                <Binding Path="Name"
                         UpdateSourceTrigger="PropertyChanged">
                    <Binding.ValidationRules>
                        <rule:NotEmptyValidationRule ValidatesOnTargetUpdated="True"/>
                    </Binding.ValidationRules>
                </Binding>
            </TextBox.Text>
        </TextBox>
        <PasswordBox
            x:Name="Password"
            material:HintAssist.Hint="Password"
            Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"
            Margin="0 8 0 8">
            <i:Interaction.Behaviors>
                <local:SecurePasswordBindingBehavior 
                    SecurePassword="{Binding Password, Mode=TwoWay}"/>
            </i:Interaction.Behaviors>
        </PasswordBox>
        <Button Content="Close"
                Style="{DynamicResource MaterialDesignFlatButton}"
                Command="{x:Static material:DialogHost.CloseDialogCommand}"/>
    </StackPanel>
</UserControl>
